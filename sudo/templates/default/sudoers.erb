#
# /etc/sudoers
# 
# Generated by Chef for <%= @node[:fqdn] %>
# 

Defaults        !lecture,tty_tickets,!fqdn

# User privilege specification
root    			ALL=(ALL) ALL

# User that may gain special privileges
<% @sudoers_users.each do |user_rights| -%>
<%= user_rights %>
<% end -%>

# Members of the sysadmin group may gain root privileges
%admins 		ALL=(ALL) ALL

# Members of the groups that may gain special privileges
<% @sudoers_groups.each do |group_rights| -%>
<%= group_rights %>
<% end -%>
